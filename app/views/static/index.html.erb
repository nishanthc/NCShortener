<header>
  <h2><%= Rails.application.config.application_name %></h2>
  <p><% if !flash[:notice].blank? %>
  <%= flash[:notice] %>
  <% end %></p>
</header>
<%= form_for(:url, :url => {:class => "url", :controller => 'urls', :action => 'create'}) do |f| %>
  <div class="row half">

<% if !@long_url.blank? %>
<div class="12u"><%= f.text_field(:long_url,class: 'text', type: "text", placeholder:@long_url) %></div>
<% else %>
<div class="12u"><%= f.text_field(:long_url,class: 'text', type: "text", placeholder:"Enter a URL") %></div>
<% end %>


<% if !@short_code.blank? %>
<br>
<center>Your Short URL:</center>
<div class="12u"><%= f.text_field(:short_url,class: 'text', type: "text", value: Rails.application.config.url+@short_code) %></div>
<% end %>
  </div>

  <div class="row">
    <div class="12u">
      <ul class="actions">

         <%= submit_tag("Shorten",:name=>"submit") %>

      </ul>
    </div>
  </div>
<% end %>
